// Q143: Find and print the student with the highest marks.

#include <stdio.h>
struct Student 
{
   char name[50];
   int roll_no;
   float marks;
};
int main()
{
   int n, i;
   printf("Enter number of students: ");
   scanf("%d", &n);
   struct Student s[n];
   int topperIndex = 0;
   for(i = 0; i < n; i++) 
   {
      printf("\nEnter details of student %d:\n", i+1);
      printf("Name: ");
      scanf("%s", s[i].name);
      printf("Roll No: ");
      scanf("%d", &s[i].roll_no);
      printf("Marks: ");
      scanf("%f", &s[i].marks);
      if(s[i].marks > s[topperIndex].marks)
      {
        topperIndex = i;
      }
   }
   printf("\nTopper: %s (Marks: %.2f)\n", s[topperIndex].name, s[topperIndex].marks);
   return 0;
}
